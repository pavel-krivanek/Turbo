Class {
	#name : #BlMiscProperties,
	#superclass : #Object,
	#traits : 'TBlDebug',
	#classTraits : 'TBlDebug classTrait',
	#instVars : [
		'clipChildren',
		'focused',
		'mouseTransparent',
		'userData',
		'debug',
		'label'
	],
	#category : #'Turbo-Core-Basic-Support'
}

{ #category : #accessing }
BlMiscProperties >> clipChildren [
	^ clipChildren
]

{ #category : #accessing }
BlMiscProperties >> clipChildren: anObject [
	clipChildren := anObject
]

{ #category : #accessing }
BlMiscProperties >> debug [
	^ debug
]

{ #category : #accessing }
BlMiscProperties >> debug: aBoolean [
	debug := aBoolean
]

{ #category : #accessing }
BlMiscProperties >> focused [
	^ self focusedProperty value
]

{ #category : #accessing }
BlMiscProperties >> focused: anObject [
	self focusedProperty value: anObject
]

{ #category : #accessing }
BlMiscProperties >> focusedProperty [
	^ focused
		ifNil: [ focused := BlObjectProperty
				on: self
				named: #focused
				default: false ]
]

{ #category : #initialization }
BlMiscProperties >> initialize [
	super initialize.
	
	clipChildren := true.
	userData := IdentityDictionary new.
	debug := false.
	label := ''
]

{ #category : #accessing }
BlMiscProperties >> label [
	<return: #String>

	^ label
]

{ #category : #accessing }
BlMiscProperties >> label: aString [
	label := aString asString
]

{ #category : #accessing }
BlMiscProperties >> userData [
	^userData
]

{ #category : #accessing }
BlMiscProperties >> userData: aDict [
	userData := aDict
]
